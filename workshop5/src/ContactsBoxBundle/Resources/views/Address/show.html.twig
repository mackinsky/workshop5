{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Address</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ entity.street }}</td>
            </tr>
            <tr>
                <th>Houseno</th>
                <td>{{ entity.houseNo }}</td>
            </tr>
            <tr>
                <th>Flatno</th>
                <td>{{ entity.flatNo }}</td>
            </tr>
            <tr>
                <th>Persons:</th>
                <td>
                    {%for person in entity.persons%}
                        <ul> <li> {{person.firstName}} {{person.lastName}}
                            </li>
                        </ul>
            {%endfor%}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('address') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('address_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
